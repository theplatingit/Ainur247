<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zelmex.pracmarathon.controller.Page8Controller">

  <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white;">
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 10 20;">
      <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="MARATHON SKILLS 2016" />
      <Region HBox.hgrow="ALWAYS" />
      <Button onAction="#cancel" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Назад" />
      <Button onAction="#logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Logout" />
    </HBox>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Спонсор бегуна" />
    <Label style="-fx-text-alignment: center; -fx-padding: 10;" text="Пожалуйста выберите бегуна, которого вы отели бы спонсировать и сумму, которую вы хотели бы спонсировать. Спасибо за вашу поддержку бегунов и их благотворительных учреждений." wrapText="true" />

    <GridPane alignment="CENTER" hgap="15" vgap="15">
      <columnConstraints>
        <ColumnConstraints prefWidth="150" />
        <ColumnConstraints prefWidth="250" />
      </columnConstraints>

      <Label text="Ваше имя:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
      <TextField fx:id="nameField" promptText="Ваше имя" GridPane.columnIndex="1" GridPane.rowIndex="0" />

      <Label text="Бегун:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <ComboBox fx:id="runnerComboBox" promptText="Выберите бегуна" GridPane.columnIndex="1" GridPane.rowIndex="1" />

      <Label text="Карта:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      <TextField fx:id="cardNameField" promptText="Владелец карты" GridPane.columnIndex="1" GridPane.rowIndex="2" />

      <Label text="Номер карты#:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
      <TextField fx:id="cardNumberField" promptText="1234 1234 1234 1234" GridPane.columnIndex="1" GridPane.rowIndex="3" />

      <Label text="Срок действия:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
      <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <TextField fx:id="monthField" prefWidth="40" promptText="MM" />
        <Label text="/" />
        <TextField fx:id="yearField" prefWidth="60" promptText="YYYY" />
      </HBox>

      <Label text="CVC:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
      <TextField fx:id="cvcField" prefWidth="60" promptText="123" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
    </GridPane>

    <VBox alignment="CENTER" spacing="10">
      <Label style="-fx-font-weight: bold;" text="Благотворительность" />
      <Label text="Фонд Кошек" />

      <Label style="-fx-font-weight: bold;" text="Сумма пожертвования" />
      <HBox alignment="CENTER" spacing="20">
        <Button onAction="#decreaseAmount" style="-fx-pref-width: 40px; -fx-background-color: white; -fx-border-color: black; -fx-pref-height: 40px;" text="-" />
        <Label fx:id="amountLabel" style="-fx-font-size: 24px;" text="50$" />
        <Button onAction="#increaseAmount" style="-fx-pref-width: 40px; -fx-background-color: white; -fx-border-color: black; -fx-pref-height: 40px;" text="+" />
      </HBox>
    </VBox>

    <HBox alignment="CENTER" spacing="20">
      <Button onAction="#pay" style="-fx-pref-width: 120px; -fx-pref-height: 40px; -fx-background-color: white; -fx-border-color: black;" text="Заплатить" />
      <Button onAction="#cancel" style="-fx-pref-width: 120px; -fx-background-color: white; -fx-border-color: black; -fx-pref-height: 40px;" text="Отмена" />
    </HBox>

    <Region VBox.vgrow="ALWAYS" />

    <Label style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-padding: 20;" text="18 дней 8 часов и 17 минут до старта марафона!" />
  </VBox>
</ScrollPane>
