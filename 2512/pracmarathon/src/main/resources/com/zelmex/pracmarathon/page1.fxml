<VBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" spacing="20" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zelmex.pracmarathon.controller.Page1Controller">

  <HBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 10 20;">
