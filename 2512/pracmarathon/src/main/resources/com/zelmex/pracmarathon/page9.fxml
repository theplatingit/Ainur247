<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zelmex.pracmarathon.controller.Page9Controller">

  <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 10 20;">
    <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="MARATHON SKILLS 2016" />
    <Region HBox.hgrow="ALWAYS" />
    <Button onAction="#goBack" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Назад" />
    <Button onAction="#logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Logout" />
  </HBox>

  <VBox alignment="CENTER" spacing="20" style="-fx-padding: 50;">
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-alignment: center;" text="Спасибо за вашу спонсорскую поддержку!" />

    <Label style="-fx-text-alignment: center;" text="Спасибо за поддержку бегуна в Marathon Skills 2016!" />

    <Label style="-fx-text-alignment: center;" text="Ваше пожертвование пойдет в его благотворительную организацию" />

    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #f8f9fa;">
      <Label style="-fx-font-weight: bold;" text="Иван Прудов(204) из Russia" />
      <Label style="-fx-font-weight: bold;" text="Фонд кошек" />
      <Label fx:id="amountLabel" style="-fx-font-size: 24px;" text="50$" />
    </VBox>
  </VBox>

  <Button onAction="#goBack" style="-fx-pref-width: 100px; -fx-border-color: black; -fx-background-color: white; -fx-pref-height: 40px;" text="Назад" />

  <Region VBox.vgrow="ALWAYS" />

  <Label style="-fx-font-size: 14px; -fx-text-fill: #2c3e50; -fx-padding: 20;" text="18 дней 8 часов и 17 минут до старта марафона!" />
</VBox>
