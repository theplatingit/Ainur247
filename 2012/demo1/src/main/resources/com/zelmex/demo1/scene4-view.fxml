<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.zelmex.demo1.controller.MainController4">
  <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0" /></padding>

  <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Задание 4: Вычисление сложной функции" />
  <Label text="c = |(N + z⁵) / (3 + z)|, где z = (N + ctg(N+1)) / sin(N+1)" wrapText="true" />

  <HBox alignment="CENTER" spacing="10.0">
    <Label text="Введите N:" />
    <TextField fx:id="nField" promptText="Введите значение N" prefWidth="150" />
  </HBox>

  <Button onAction="#onCalcButtonClick" text="Вычислить c" />

  <Label fx:id="resultLabel" text="Результат c = ?" wrapText="true"
         style="-fx-font-size: 14px; -fx-font-weight: bold;" />

  <VBox VBox.vgrow="ALWAYS" />

  <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10;">
    <Button text="Перейти на Задание 1" onAction="#goToscene" />
    <Button text="Перейти на Задание 2" onAction="#goToscene2" />
    <Button text="Перейти на Задание 3" onAction="#goToscene3" />
  </HBox>
</VBox>