<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.zelmex.demo1.controller.MainController3">
  <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0" /></padding>

  <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Задание 3: Конвертер температуры" />

  <HBox alignment="CENTER" spacing="10.0">
    <Label text="Температура в °F:" />
    <TextField fx:id="fahrenheitField" promptText="Градусы Фаренгейта" prefWidth="150" />
  </HBox>

  <Button onAction="#onConvertButtonClick" text="Конвертировать в °C" />

  <Label fx:id="resultLabel" text="Температура в °C: ?"
         style="-fx-font-size: 14px; -fx-font-weight: bold;" />

  <VBox VBox.vgrow="ALWAYS" />

  <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10;">
    <Button text="Перейти на Задание 1" onAction="#goToscene" />
    <Button text="Перейти на Задание 2" onAction="#goToscene2" />
    <Button text="Перейти на Задание 4" onAction="#goToscene4" />
  </HBox>
</VBox>