<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.zelmex.demo1.controller.MainController2">
  <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0" /></padding>

  <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Задание 2: Обмен значений переменных" />

  <HBox alignment="CENTER" spacing="10.0">
    <VBox spacing="5.0">
      <Label text="Исходные значения:" />
      <HBox spacing="5.0">
        <Label text="A:" />
        <TextField fx:id="aOriginalField" promptText="Введите A" prefWidth="80" />
        <Label text="B:" />
        <TextField fx:id="bOriginalField" promptText="Введите B" prefWidth="80" />
      </HBox>
    </VBox>
  </HBox>

  <Button onAction="#onSwapButtonClick" text="Поменять местами" />

  <Label fx:id="resultLabel" text="Новые значения: A = ?, B = ?"
         style="-fx-font-size: 14px; -fx-font-weight: bold;" />

  <VBox VBox.vgrow="ALWAYS" />

  <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10;">
    <Button text="Перейти на Задание 1" onAction="#goToscene" />
    <Button text="Перейти на Задание 3" onAction="#goToscene3" />
    <Button text="Перейти на Задание 4" onAction="#goToscene4" />
  </HBox>
</VBox>