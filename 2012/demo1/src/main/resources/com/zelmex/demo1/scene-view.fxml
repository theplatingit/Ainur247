<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.zelmex.demo1.controller.MainController1">
  <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0" /></padding>

  <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Задание 1: Операции с квадратами чисел" />

  <HBox alignment="CENTER" spacing="10.0">
    <Label text="Первое число:" />
    <TextField fx:id="num1Field" promptText="Введите число" prefWidth="100" />
  </HBox>

  <HBox alignment="CENTER" spacing="10.0">
    <Label text="Второе число:" />
    <TextField fx:id="num2Field" promptText="Введите число" prefWidth="100" />
  </HBox>

  <Button onAction="#onCalcButtonClick" text="Вычислить" />

  <Label fx:id="resultLabel" text="Результат будет здесь" wrapText="true"
         style="-fx-font-size: 14px; -fx-font-weight: bold;" />

  <VBox VBox.vgrow="ALWAYS" />

  <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10;">
    <Button text="Перейти на Задание 2" onAction="#goToscene2" />
    <Button text="Перейти на Задание 3" onAction="#goToscene3" />
    <Button text="Перейти на Задание 4" onAction="#goToscene4" />
  </HBox>
</VBox>