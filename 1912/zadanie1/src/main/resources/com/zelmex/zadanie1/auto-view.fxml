        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Число a:"/>
    <TextField fx:id="aField"/>

    <Label text="Число b:"/>
    <TextField fx:id="bField"/>

    <Button text="Вычислить" onAction="#calculate"/>

    <Label fx:id="resultLabel"/>
</VBox>